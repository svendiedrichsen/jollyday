<?xml version="1.0" encoding="UTF-8"?>
<tns:Configuration hierarchy="mx" description="Mexico"
	xmlns:tns="http://jollyday.sourceforge.net/Jollyday" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://jollyday.sourceforge.net/Jollyday ../Holiday.xsd">
	<tns:Holiday>
		<tns:Fixed month="FEBRUARY" day="19" localizedType="UNOFFICIAL_HOLIDAY"
			descriptionPropertiesKey="ARMY_DAY" />
	</tns:Holiday>
	<tns:Holiday validFrom="1937">
		<tns:Fixed month="FEBRUARY" day="24" localizedType="UNOFFICIAL_HOLIDAY"
			descriptionPropertiesKey="FLAG_DAY" />
	</tns:Holiday>
	<tns:Holiday validFrom="1938">
		<tns:Fixed month="MARCH" day="18" localizedType="UNOFFICIAL_HOLIDAY"
			descriptionPropertiesKey="FLAG_DAY" />
	</tns:Holiday>
	<tns:Holiday>
		<tns:Fixed month="OCTOBER" day="12" localizedType="UNOFFICIAL_HOLIDAY"
			descriptionPropertiesKey="COLUMBUS_DAY" />
	</tns:Holiday>
	<tns:Holiday>
		<tns:Fixed month="JANUARY" day="1" descriptionPropertiesKey="NEW_YEAR" />
		<tns:MovingCondition to="PREVIOUS" weekday="FRIDAY">
			<tns:when>SATURDAY</tns:when>
		</tns:MovingCondition>
		<tns:MovingCondition to="NEXT" weekday="MONDAY">
			<tns:when>SUNDAY</tns:when>
		</tns:MovingCondition>
	</tns:Holiday>
	<tns:Holiday>
		<tns:Fixed month="MAY" day="1" descriptionPropertiesKey="LABOUR_DAY" />
		<tns:MovingCondition to="PREVIOUS" weekday="FRIDAY">
			<tns:when>SATURDAY</tns:when>
		</tns:MovingCondition>
		<tns:MovingCondition to="NEXT" weekday="MONDAY">
			<tns:when>SUNDAY</tns:when>
		</tns:MovingCondition>
	</tns:Holiday>
	<tns:Holiday>
		<tns:Fixed month="SEPTEMBER" day="16"
			descriptionPropertiesKey="INDEPENDENCE" />
		<tns:MovingCondition to="PREVIOUS" weekday="FRIDAY">
			<tns:when>SATURDAY</tns:when>
		</tns:MovingCondition>
		<tns:MovingCondition to="NEXT" weekday="MONDAY">
			<tns:when>SUNDAY</tns:when>
		</tns:MovingCondition>
	</tns:Holiday>
	<tns:Holiday validFrom="1934" every="6_YEARS">
		<tns:Fixed month="DECEMBER" day="1"
			descriptionPropertiesKey="GOVERNMENT_CHANGE" />
		<tns:MovingCondition to="PREVIOUS" weekday="FRIDAY">
			<tns:when>SATURDAY</tns:when>
		</tns:MovingCondition>
		<tns:MovingCondition to="NEXT" weekday="MONDAY">
			<tns:when>SUNDAY</tns:when>
		</tns:MovingCondition>
	</tns:Holiday>
	<tns:Holiday>
		<tns:Fixed month="DECEMBER" day="25"
			descriptionPropertiesKey="CHRISTMAS" />
		<tns:MovingCondition to="PREVIOUS" weekday="FRIDAY">
			<tns:when>SATURDAY</tns:when>
		</tns:MovingCondition>
		<tns:MovingCondition to="NEXT" weekday="MONDAY">
			<tns:when>SUNDAY</tns:when>
		</tns:MovingCondition>
	</tns:Holiday>
	<tns:Holiday>
		<tns:FixedWeekdayInMonth which="FIRST"
			weekday="MONDAY" month="FEBRUARY" descriptionPropertiesKey="CONSTITUTION_DAY" />
	</tns:Holiday>
	<tns:Holiday>
		<tns:FixedWeekdayInMonth which="THIRD"
			weekday="MONDAY" month="MARCH" descriptionPropertiesKey="JUAREZ_BIRTHDAY" />
	</tns:Holiday>
	<tns:Holiday>
		<tns:FixedWeekdayInMonth which="THIRD"
			weekday="MONDAY" month="NOVEMBER" descriptionPropertiesKey="REVOLUTION" />
	</tns:Holiday>
	<tns:SubConfigurations hierarchy="pue"
		description="Puebla">
		<tns:Holiday>
			<tns:Fixed month="MAY" day="5" descriptionPropertiesKey="MAY_DAY"
				localizedType="UNOFFICIAL_HOLIDAY" />
		</tns:Holiday>
	</tns:SubConfigurations>
</tns:Configuration>
