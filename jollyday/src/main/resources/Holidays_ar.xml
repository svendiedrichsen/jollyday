<?xml version="1.0" encoding="UTF-8"?>
<tns:Configuration hierarchy="ar" description="Argentina"
	xmlns:tns="http://www.example.org/Holiday" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.example.org/Holiday Holiday.xsd ">
	<tns:Holidays>
		<tns:Fixed month="JANUARY" day="1" descriptionPropertiesKey="holiday.description.NEW_YEAR"/>
		<tns:Fixed month="MARCH" day="24" validFrom="2006" descriptionPropertiesKey="holiday.description.REMEMBRANCE_TRUTH_JUSTICE"/>
		<tns:Fixed month="APRIL" day="2" validFrom="2001" descriptionPropertiesKey="holiday.description.MALVINAS"/>
		<tns:Fixed month="MAY" day="1" descriptionPropertiesKey="holiday.description.LABOUR_DAY"/>
		<tns:Fixed month="MAY" day="25" descriptionPropertiesKey="holiday.description.MAY_REVOLUTION"/>
		<tns:Fixed month="JULY" day="9" descriptionPropertiesKey="holiday.description.INDEPENDENCE"/>
		<tns:Fixed month="OCTOBER" day="12" descriptionPropertiesKey="holiday.description.COLUMBUS_DAY">
			<tns:MovingCondition substitute="TUESDAY" with="PREVIOUS" weekday="MONDAY"/>
			<tns:MovingCondition substitute="WEDNESDAY" with="PREVIOUS" weekday="MONDAY"/>
			<tns:MovingCondition substitute="THURSDAY" with="NEXT" weekday="MONDAY"/>
			<tns:MovingCondition substitute="FRIDAY" with="NEXT" weekday="MONDAY"/>
			<tns:MovingCondition substitute="SATURDAY" with="NEXT" weekday="MONDAY"/>
			<tns:MovingCondition substitute="SUNDAY" with="NEXT" weekday="MONDAY"/>
		</tns:Fixed>
		<tns:Fixed month="OCTOBER" day="27" validFrom="2010" validTo="2010" />
		<tns:Fixed month="DECEMBER" day="8" descriptionPropertiesKey="holiday.description.IMMACULATE_CONCEPTION"/>
		<tns:Fixed month="DECEMBER" day="24" descriptionPropertiesKey="holiday.description.CHRISTMAS_EVE"/>
		<tns:Fixed month="DECEMBER" day="25" descriptionPropertiesKey="holiday.description.CHRISTMAS"/>
		<tns:Fixed month="DECEMBER" day="31" descriptionPropertiesKey="holiday.description.NEW_YEARS_EVE"/>
		<tns:FixedWeekday which="THIRD" weekday="MONDAY" month="JUNE" descriptionPropertiesKey="holiday.description.FLAG_DAY"/>
		<tns:FixedWeekday which="THIRD" weekday="MONDAY" month="AUGUST" descriptionPropertiesKey="holiday.description.MARTIN_DAY"/>
		<tns:ChristianHoliday type="MAUNDY_THURSDAY"/>
		<tns:ChristianHoliday type="GOOD_FRIDAY"/>
	</tns:Holidays>
</tns:Configuration>
