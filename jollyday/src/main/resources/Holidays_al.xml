<?xml version="1.0" encoding="UTF-8"?>
<tns:Configuration hierarchy="al" description="Albania"
	xmlns:tns="http://www.example.org/Holiday" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.example.org/Holiday Holiday.xsd ">
	<tns:Holidays>
		<tns:Fixed month="JANUARY" day="1" descriptionPropertiesKey="holiday.description.NEW_YEAR">
			<tns:MovingCondition substitute="SATURDAY" with="NEXT" weekday="MONDAY"/>
			<tns:MovingCondition substitute="SUNDAY" with="NEXT" weekday="MONDAY"/>
		</tns:Fixed>
		<tns:Fixed month="JANUARY" day="2" descriptionPropertiesKey="holiday.description.NEW_YEAR">
			<tns:MovingCondition substitute="SATURDAY" with="NEXT" weekday="MONDAY"/>
			<tns:MovingCondition substitute="SUNDAY" with="NEXT" weekday="MONDAY"/>
		</tns:Fixed>
		<tns:Fixed month="MARCH" day="14" validFrom="2004" descriptionPropertiesKey="holiday.description.SPRING_DAY">
			<tns:MovingCondition substitute="SATURDAY" with="NEXT" weekday="MONDAY"/>
			<tns:MovingCondition substitute="SUNDAY" with="NEXT" weekday="MONDAY"/>
		</tns:Fixed>
		<tns:Fixed month="MAY" day="1" descriptionPropertiesKey="holiday.description.LABOUR_DAY">
			<tns:MovingCondition substitute="SATURDAY" with="NEXT" weekday="MONDAY"/>
			<tns:MovingCondition substitute="SUNDAY" with="NEXT" weekday="MONDAY"/>
		</tns:Fixed>
		<tns:Fixed month="OCTOBER" day="19" validFrom="2003" descriptionPropertiesKey="holiday.description.MOTHER_TERESA">
			<tns:MovingCondition substitute="SATURDAY" with="NEXT" weekday="MONDAY"/>
			<tns:MovingCondition substitute="SUNDAY" with="NEXT" weekday="MONDAY"/>
		</tns:Fixed>
		<tns:Fixed month="NOVEMBER" day="28" descriptionPropertiesKey="holiday.description.INDEPENDENCE"/>
		<tns:Fixed month="NOVEMBER" day="29" descriptionPropertiesKey="holiday.description.LIBERATION"/>
		<tns:Fixed month="DECEMBER" day="25" descriptionPropertiesKey="holiday.description.CHRISTMAS"/>
		<tns:ChristianHoliday type="EASTER_MONDAY" />
		<tns:ChristianHoliday type="GOOD_FRIDAY" />
		<tns:IslamicHoliday type="ID_UL_ADHA" />
		<tns:IslamicHoliday type="ID_AL_FITR" />
	</tns:Holidays>
</tns:Configuration>
